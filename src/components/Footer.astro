---
import { Image } from "astro:assets";
import headerLogo from "../assets/logo_header.webp";
---

<footer>
  <div>
    <div><Image src={headerLogo} alt="Logo" /></div>
    <div>
      <div>
        <b>blätterdach e.U.</b>
      </div>
      <div id="info_container">
        <div>
          <span>Simon Biegl</span>
          <span>Treustraße 92, 1200 Wien</span>
          <span>+43 670 554 9449</span>
          <span>office@blaetterdach.com</span>
        </div>
        <div>
          <a href="/blaetterdach/impressum">Impressum</a>
          <a href="/blaetterdach/agb">AGB</a>
          <a href="/blaetterdach/datenschutzerklaerung">Datenschutzerklärung</a>
        </div>
      </div>
    </div>
  </div>
  <div>Copyright © blätterdach e.U.</div>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    gap: 5rem;
    padding: 8rem 4rem 1rem 4rem;
    border-top: 1px solid #d8d8d8;

    & > div {
      flex: 1;
      display: flex;
      justify-content: space-around;
      align-items: center;

      & > div {
        display: flex;
        flex-direction: column;
      }
    }
  }

  #info_container {
    display: flex;
    gap: 4rem;

    & > div {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      line-height: 2;
    }

    a {
      display: inline;
      color: inherit;
    }
  }
</style>
